metamodel Chess {
	Board {
		.width : EInt
		.height: EInt
		-fields(0..*)-> Field
	}
	
	Field {
		-right(0..1)-> Field
		-bottom(0..1)-> Field
		-bottomRight(0..1)-> Field
		-bottomLeft(0..1)-> Field
	}
	
	Figure {
		.colour : COLOUR
		-standsOn(0..1)-> Field
	}
	
	enum COLOUR {
		BLACK
		WHITE
	}
	
	King : Figure
	Queen : Figure
	Rook : Figure
	Bishop : Figure
	Knight : Figure
	Pawn : Figure
}