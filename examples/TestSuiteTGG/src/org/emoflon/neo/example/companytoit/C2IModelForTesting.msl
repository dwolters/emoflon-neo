	l2 : Laptop{
		.name : "Laptop2"
	}
}

rule ConsistentTriple1 -> InconsistentTriple1 {
	e2: Employee{
		.name : "Michael"
		++ -corr-> l2{
			._type_ := "EmployeeToLaptop"
		}
	}
	
	l2 : Laptop{
		.name : "Laptop2"
	}
}

