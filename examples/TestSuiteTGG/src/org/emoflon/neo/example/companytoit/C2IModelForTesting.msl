import "platform:/resource/CompanyToIT/src/metamodels/IT.msl"
import "platform:/resource/CompanyToIT/src/metamodels/Company.msl"

model InconsistentSource1{
	c: Company{
		.name : "Fraunhofer"
		-ceo-> ceo1
		-admin-> a1
		-employee-> e1
	}
	
	e1: Employee{
		.name : "Mario"
	}	
	
	ceo1: CEO {
		-employee-> e1
		.name : "Fraunhofer"
	}
	
	a1 : Admin {
		-ceo-> ceo1
		.name : "Friedhelm"
	}
}

model InconsistentTarget1{
	it : IT {
		-network-> network
		-router-> router
		.name : "Fraunhofer"
	}
	
	network : Network {
		.name : "Friedhelm"
		-laptop->l1
	}
	
	router : Router {
		.name : "Friedhelm"
		-network->network
	}
	
	l1 : Laptop{
		.name : "Laptop1"
	}
}

rule InconsistentTriple1{
	c: Company{
		.name : "Fraunhofer"
		++ -corr-> it{
			._type_ := "CompanyToIT"
		}
	}
	
	a1: Admin {
		.name : "Friedhelm"
		++ -corr-> router{
			._type_ := "AdminToRouter"
		}
	}
	
	e1: Employee{
		.name : "Mario"
		++ -corr-> l1{
			._type_ := "EmployeeToLaptop"
		}
	}

	it : IT {
		.name : "Fraunhofer"
	}
	
	router : Router{
		.name : "Friedhelm"
	}
	
	l1 : Laptop{
		.name : "Laptop1"
	}
}

model ConsistentSource1 -> InconsistentSource1 {
	c: Company {
		-employee-> e2
	}
	
	ceo1: CEO {
		-employee-> e2
	}
	
	e2: Employee{
		.name : "Michael"
	}
}

model ConsistentTarget1 -> InconsistentTarget1 {
